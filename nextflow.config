manifest {
	author = "Semion Leyn"
	name = "RefPrep"
	description = "Preparation of a reference genome files for NGS data processing."
	version = "1.0.0"
}

process {    
    container = 'semenleyn/refprep_pipeline:latest'
}

docker {
    enabled = true
	runOptions = '-v "$PWD":"$PWD" -w "$PWD" -u $(id -u):$(id -g)'
}